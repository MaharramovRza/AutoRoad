
@model List<CarAdminDto>
<div id="tableFooter" class="col-lg-12 col-12 layout-spacing">
    <div class="statbox widget box box-shadow">
        <div class="widget-header">
            <div class="row">
                <div class="col-xl-12 col-md-12 col-sm-12 col-12">
                    <h4>Cars</h4>

                    <a href="@Url.Action("Add","Car")" class="badge badge-primary"> Add Car </a>
                </div>
            </div>
        </div>
        <div class="widget-content widget-content-area">
            <div class="table-responsive">
                <table class="table table-bordered table-hover table-condensed mb-4">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Photo</th>
                            <th>Model</th>
                            <th>Brand</th>
                            <th>Price</th>
                            <th>Year</th>
                            <th>Fuel</th>
                            <th>Ban</th>
                            <th>Transmission</th>
                            <th>Created</th>
                            <th>Status</th>
                            <th class="text-center">Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var car in Model)
                        {
                            <tr>
                                <td>@car.CarId</td>
                                <td><img src="@car.Photo" style="width:100px;height:100px;"></img></td>
                                <td>@car.ModelName</td>
                                <td>@car.BrandName</td>
                                <td>@car.Price</td>
                                <td>@car.Year</td>
                                <td>@car.FuelType</td>
                                <td>@car.BanType</td>
                                <td>@car.TransmissionType</td>
                                <td>@car.Created</td>
                                <td>
                                    @if(car.HasGarage)
                                    {
                                        <span class="badge badge-success"> Yes </span>
                                    }
                                    else
                                    {
                                        <span class="badge badge-danger"> No </span>
                                    }
                                </td>

                                <td class="text-center">
                                    <ul class="table-controls">
                                        <li><a href="@Url.Action("Edit","Car",new{carId = car.CarId})" data-toggle="tooltip" data-placement="top" title="Edit"><svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-check-circle text-primary"><path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"></path><polyline points="22 4 12 14.01 9 11.01"></polyline></svg></a></li>
                                    </ul>
                                </td>
                            </tr>
                        }
                    </tbody>

                </table>
            </div>

            <!-- Pagination  -->
            @await Component.InvokeAsync("Pagination",ViewBag.PaginationModel)

        </div>


    </div>
</div>





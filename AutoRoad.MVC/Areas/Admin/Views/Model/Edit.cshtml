@model ModelEditModel
<div id="basic" class="col-lg-12 layout-spacing">
    <div class="statbox widget box box-shadow">
        <div class="widget-header">
            <div class="row">
                <div class="col-xl-12 col-md-12 col-sm-12 col-12">
                    <h4>Edit Model</h4>
                </div>
            </div>
        </div>
        <div class="widget-content widget-content-area">

            <div class="row">
                <div class="col-lg-6 col-12 mx-auto">
                    <form method="post" action="@Url.Action("Edit","Model")">

                        <input type="hidden" name="BrandId" value="@Model.BrandId"></input>
                        <input type="hidden" name="ModelId" value="@Model.ModelId"></input>

                        
                        @Html.ValidationSummary(true)
                        <div class="form-group">
                            @Html.ValidationMessageFor(c => c.Name)
                            <input style="margin-bottom:25px" value="@Model?.Name" id="t-text" type="text" name="name" placeholder="Model.." class="form-control" required>
                            @Html.ValidationMessageFor(c =>c.BrandName)
                            <input style="margin-bottom:25px" value="@Model?.BrandName" id="t-text" type="text" name="brandName" placeholder="Brand.." class="form-control" required>

                            <input type="submit" name="txt" class="mt-4 btn btn-primary">
                        </div>
                    </form>
                </div>
            </div>

        </div>
    </div>


    @section ModelEditStyles{
        <!--  BEGIN CUSTOM STYLE FILE  -->
        <link href="assets/css/scrollspyNav.css" rel="stylesheet" type="text/css" />
        <!--  END CUSTOM STYLE FILE  -->
    }


    @section ModelEditScripts {
        <script src="assets/js/scrollspyNav.js"></script>
    }

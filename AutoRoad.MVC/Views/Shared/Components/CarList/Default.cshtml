@using AutoRoad.MVC.ViewModels.OurCar;
@model OurCarModel
<!-- Car list -->
<div class="container pt-5 pb-5">
    <div id="cars" class="row mb-5">
       

        @foreach(var car in Model.Cars )
        {
            
         
                <div class="car col-xl-3 col-lg-3 col-md-6 col-12 mt-5">
                    <div>
                        <img src="@car.Photo" alt="">
                    </div>

                    <div class="d-flex flex-column align-items-center">
                        <h5 class="mt-3">@car.ModelName</h5>
                        <span class="">@car.BrandName</span>
                        <div class="mt-3">
                            <a href="#">Book now</a>
                            <a href="#" data-toggle="modal" data-target="#exampleModalCenter" class="btn_car_dtl" data-id="@car.CarId">Details</a>

                            <!-- Button trigger modal -->
                            <!-- Modal -->
                        <div id="car_detail_modal"></div>
     
                        </div>
                    </div>
                </div>

            
        }
    </div>

    <!-- Pagination  -->
    <div class="paginating-container pagination-solid" style="display:flex;justify-content:center">

        <ul class="pagination">
            @* <li class="prev"><a href="javascript:void(0);">Prev</a></li> *@
            @for (var i = 1; i <= Model.PageCount; i++)
            {
                <li class="@(Model.Page == i ? "active" : "")"><a href="@(Model.Url + "?page="+i)">@i</a></li>
            }
            @* <li class="next"><a href="javascript:void(0);">Next</a></li> *@
        </ul>

    </div>
</div>
<!-- Car list end -->
